@model FoodProject.Models.Order

@{
    ViewData["Title"] = "Order Confirmation";
}

<style>
    .order-container {
        max-width: 800px;
        margin: auto;
        text-align: center;
        background: #ffe6e6;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 3px 3px 15px rgba(0, 0, 0, 0.2);
    }

    .order-table {
        width: 100%;
        margin-top: 20px;
        border-collapse: collapse;
        background: #fff;
        border-radius: 5px;
        overflow: hidden;
        box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
    }

        .order-table th, .order-table td {
            padding: 12px;
            border: 1px solid #ddd;
            text-align: center;
        }

        .order-table th {
            background: #ff9999;
            color: white;
            font-weight: bold;
        }

    .total-price {
        font-size: 20px;
        font-weight: bold;
        color: #b30000;
        margin-top: 15px;
    }

    .continue-btn {
        margin-top: 20px;
    }
</style>

<div class="order-container">
    <h2>Order Confirmation</h2>
    <p>Thank you for your order!</p>

    <h4>Order ID: @Model.Id</h4>

    <h5>Order Details:</h5>
    <table class="order-table">
        <thead>
            <tr>
                <th>Dish</th>
                <th>Quantity</th>
                <th>Price (per item)</th>
                <th>Subtotal</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderItems)
            {
                <tr>
                    <td>@item.Dish.Name</td>
                    <td>@item.Quantity</td>
                    <td>@item.Price.ToString("N2")</td>
                    <td>@(item.Quantity * item.Price)</td>
                </tr>
            }
        </tbody>
    </table>
    @if (!string.IsNullOrEmpty(Model.VoucherCode))
    {
        <p><strong>Voucher Used:</strong> @Model.VoucherCode</p>
    }
    <p class="total-price">Total Price: @Model.TotalPrice.ToString("N2") Dollars</p>

    <a class="btn btn-info continue-btn" asp-controller="Menu" asp-action="Index">Continue Shopping</a>
</div>
