@model FoodProject.Models.Dish

@{
    ViewData["Title"] = "Add Dish";
}

<div class="container mt-4">
    <h2 class="text-danger">Add Dish</h2>

    <form asp-action="AddDish" method="post" class="mb-4">
        <div class="mb-3">
            <label class="form-label fw-bold text-danger">Dish Name</label>
            <input asp-for="Name" class="form-control border-danger" placeholder="Enter dish name..." required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold text-danger">Price ($)</label>
            <input asp-for="Price" type="number" step="0.01" class="form-control border-danger" placeholder="Enter price..." required />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold text-danger">Image URL</label>
            <input asp-for="ImageUrl" type="url" class="form-control border-danger" placeholder="Enter image URL..." required />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold text-danger">Description</label>
            <textarea asp-for="Description" class="form-control border-danger" placeholder="Enter dish description..." required></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold text-danger">Category</label>
            <select asp-for="Category" class="form-control border-danger">
                <option value="Food">Food</option>
                <option value="Drink">Drink</option>
            </select>
        </div>

        <button type="submit" class="btn btn-danger">Add</button>
        <a class="btn btn-secondary" asp-action="Index" asp-controller="Menu">Cancel</a>
    </form>

</div>

<style>
    .container {
        max-width: 600px;
        margin: auto;
    }
</style>
